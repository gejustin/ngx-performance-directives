{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@gej/performance-directives": [
        "libs/performance-directives/src/index.ts"
      ],
      "@gej/rxjs-idle-callback-scheduler": [
        "libs/rxjs-idle-callback-scheduler/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
